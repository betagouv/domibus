

<assembly
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
        xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    <id>weblogic-eu-login-configuration</id>
    <formats>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>true</includeBaseDirectory>
    <baseDirectory></baseDirectory>
    <includeSiteDirectory>false</includeSiteDirectory>
    <fileSets>
        <fileSet>
            <directory>${project.basedir}/../../Weblogic/Domibus-MSH-weblogic-common/src/main/conf/domibus</directory>
            <outputDirectory>/</outputDirectory>
            <useDefaultExcludes>true</useDefaultExcludes>
            <excludes>
                <exclude>plugins/**</exclude>
            </excludes>
            <filtered>false</filtered>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/../../Weblogic/Domibus-MSH-weblogic-eu-login/src/main/conf/domibus</directory>
            <outputDirectory>/</outputDirectory>
            <useDefaultExcludes>true</useDefaultExcludes>
            <filtered>false</filtered>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/../../Weblogic/Domibus-MSH-weblogic-common/src/main/conf/scripts/upgrades</directory>
            <outputDirectory>/scripts/upgrades</outputDirectory>
            <useDefaultExcludes>true</useDefaultExcludes>
            <filtered>false</filtered>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/../Domibus-MSH/src/main/conf/domibus/example/</directory>
            <useDefaultExcludes>false</useDefaultExcludes>
            <outputDirectory>example</outputDirectory>
            <!-- excludes/-->
            <fileMode>0444</fileMode>
            <directoryMode>0555</directoryMode>
            <!-- directory/-->
            <lineEnding>unix</lineEnding>
            <filtered>false</filtered>
        </fileSet>
    </fileSets>

    <files>
        <file>
            <source>${project.basedir}/../../Weblogic/Domibus-MSH-weblogic-common/src/main/conf/scripts/WeblogicCluster.properties</source>
            <outputDirectory>scripts</outputDirectory>
            <filtered>false</filtered>
        </file>
        <file>
            <source>${project.basedir}/../../Weblogic/Domibus-MSH-weblogic-common/src/main/conf/scripts/WeblogicSingleServer.properties</source>
            <outputDirectory>scripts</outputDirectory>
            <filtered>false</filtered>
        </file>
        <file>
            <source>
                ${project.basedir}/../Domibus-MSH/src/main/conf/domibus/domains/domain_name/domain_name-domibus.properties
            </source>
            <outputDirectory>domains/domain_name</outputDirectory>
            <destName>domain_name-domibus.properties</destName>
            <filtered>false</filtered>
        </file>
        <file>
            <source>
                ${project.basedir}/../Domibus-MSH/src/main/conf/domibus/domains/default/default-domibus.properties
            </source>
            <outputDirectory>domains/default</outputDirectory>
            <destName>default-domibus.properties</destName>
            <filtered>false</filtered>
        </file>
        <file>
            <source>
                ${project.basedir}/../Domibus-MSH/src/main/conf/domibus/domains/super-domibus.properties
            </source>
            <outputDirectory>/domains</outputDirectory>
            <destName>super-domibus.properties</destName>
            <filtered>false</filtered>
        </file>

        <file>
            <!-- the ehcache will be moved to the core configuration-->
            <source>${project.basedir}/../Domibus-MSH/src/main/conf/domibus/internal/ehcache.xml</source>
            <outputDirectory>internal</outputDirectory>
            <filtered>false</filtered>
        </file>
        <file>
            <source>${project.basedir}/../Domibus-MSH/src/main/conf/domibus/policies/eDeliveryAS4Policy.xml</source>
            <outputDirectory>policies</outputDirectory>
            <filtered>false</filtered>
        </file>
        <file>
            <source>${project.basedir}/../Domibus-MSH/src/main/conf/domibus/policies/eDeliveryAS4Policy_BST.xml</source>
            <outputDirectory>policies</outputDirectory>
            <filtered>false</filtered>
        </file>
        <file>
            <source>${project.basedir}/../Domibus-MSH/src/main/conf/domibus/policies/eDeliveryAS4Policy_BST_PKIP.xml</source>
            <outputDirectory>policies</outputDirectory>
            <filtered>false</filtered>
        </file>
        <file>
            <source>${project.basedir}/../Domibus-MSH/src/main/conf/domibus/policies/eDeliveryAS4Policy_IS.xml</source>
            <outputDirectory>policies</outputDirectory>
            <filtered>false</filtered>
        </file>
    </files>
</assembly>